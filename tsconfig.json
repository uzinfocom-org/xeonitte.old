{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": true,
    "target": "ES5",
    "sourceMap": true,
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "*": ["node_modules/*"],
      "@actions/*": ["src/actions/*"],
      "@assets/*": ["src/assets/*"],
      "@src/*": ["src/*"],
      "@type/*": ["src/types/*"],
      "@core/*": ["src/core/*"],
      "@database/*": ["src/database/*"],
      "@layouts/*": ["src/layouts/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}